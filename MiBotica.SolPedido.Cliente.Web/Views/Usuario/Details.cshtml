@model MiBotica.SolPedido.Entidades.Core.Usuario

@{
    ViewBag.Title = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Tus estilos CSS aquí (mantener igual) */
</style>

<div class="container">
    @if (Model == null)
    {
        <div class="alert alert-danger">
            <h4><i class="fas fa-exclamation-triangle"></i> Usuario No Encontrado</h4>
            <p>El usuario que buscas no existe o no se pudo cargar la información.</p>
            <div class="mt-3">
                @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
            </div>
        </div>
    }
    else
    {
        <div class="card">
            <div class="card-header">
                <h2><i class="fas fa-user-circle"></i> Detalles del Usuario</h2>
            </div>
            <div class="card-body">
                <div class="user-info">
                    <div class="info-section">
                        <h3 class="section-title">
                            <i class="fas fa-id-card"></i> Información del Usuario
                        </h3>
                        <div class="info-grid">
                            <div class="info-item">
                                <span class="info-label">ID de Usuario</span>
                                <span class="info-value">@Model.IdUsuario</span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Código de Usuario</span>
                                <span class="info-value">@Model.CodUsuario</span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Nombres Completos</span>
                                <span class="info-value">@Model.Nombres</span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Estado</span>
                                <span class="info-value">
                                    @{
                                        var estado = Model.Estado ? "Activo" : "Inactivo";
                                        var claseEstado = Model.Estado ? "status-active" : "status-inactive";
                                    }
                                    <span class="status-badge @claseEstado">@estado</span>
                                </span>
                            </div>

                            <div class="info-item">
                                <span class="info-label">Contraseña</span>
                                <span class="info-value">
                                    <i class="fas fa-lock"></i> Encriptada
                                    <small class="text-muted d-block">(Protegida por seguridad)</small>
                                </span>
                            </div>

                            @if (Model.FechaCreacion != null)
                            {
                                <div class="info-item">
                                    <span class="info-label">Fecha de Creación</span>
                                    <span class="info-value">@Model.FechaCreacion.Value.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            }
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    @Html.ActionLink("Volver a la Lista", "Index", null, new { @class = "btn btn-outline-secondary" })
                    @Html.ActionLink("Editar Usuario", "Edit", new { id = Model.IdUsuario }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Eliminar Usuario", "Delete", new { id = Model.IdUsuario }, new { @class = "btn btn-danger" })
                </div>
            </div>
        </div>
    }
</div>